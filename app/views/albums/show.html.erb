<%- model_class = Album -%>
<div class="page-header">
  <h1><%=t '.title', :default => @album.name.titleize %></h1>
</div>

<div class="row-fluid" style="display: table!important; float:none!important;">
  <% for picture in @album.pictures %>
    <div class="span3" style="text-align: center; float: none!important;
    display: table-cell!important;
    vertical-align:middle; ">
      <div class="name"><h4><%= picture.name %></h4></div>
<!--       <a class="fancybox" rel="group" href="#">
       <%= link_to image_tag(picture.image_url.to_s, :size => "180x180"), picture.image_url.to_s,  :class => 'fancybox', :rel => 'group' %>
      </a> -->
      <%= link_to (picture.image_url.to_s), :class => 'fancybox', :rel => 'group' do %>
        <%= image_tag(picture.image_url.to_s, size: '90x90') %>
      <% end %>
<!--       <div style="width: 200px; height: 200px;">
        <%= image_tag(picture.image_url.to_s, width: '180', height: '180', overflow: 'hidden') if picture.image? %>
      </div> -->
<!--       <div class="actions">
        <%= link_to "view in gallery", picture.image_url.to_s, { :class => "grouped_elements", :rel => "zomg_awesome_images" } %> |
        <%= link_to "remove", picture, :confirm => 'Are you sure?', :method => :delete %>
      </div> -->
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              albums_path, :class => 'btn btn-primary', :style => 'color: white;' %>
<!--   <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_album_path(@album), :class => 'btn' %> -->
  <%= link_to "Add a Picture", new_picture_path(:album_id => @album),
              :class => 'btn btn-primary pull-right', :style => 'color: white;' %>
<!--   <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              album_path(@album),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %> -->
</div>

<div id="blueimp-gallery" class="blueimp-gallery">
  <div class="slides"></div>
  <h3 class="title"></h3>
  <a class="prev">‹</a>
  <a class="next">›</a>
  <a class="close">×</a>
  <a class="play-pause"></a>
  <ol class="indicator"></ol>
</div>
<div id="links">
  <% for picture in @album.pictures %>
    <a href=<%=picture.image_url.to_s%>>
      <img src=<%=picture.image_url.to_s%> alt="Photo 2">
    </a>
  <% end %>
</div>
